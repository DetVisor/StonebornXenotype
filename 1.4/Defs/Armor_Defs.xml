<Defs>

    <ThingDef ParentName="ApparelArmorHelmetPowerBase">
        <defName>DV_Apparel_BeardedHelmet</defName>
        <label>bearded helmet</label>
        <description>A marine armor helmet, with a built-in status computer and layered plasteel-weave plates.\n\nArmor like this is often used by rapid-incursion space marines.</description>
        <apparel>
          <tags>
            <li>SpacerMilitary</li>
          </tags>
        </apparel>
        <tradeTags>
          <li>Armor</li>
        </tradeTags>
        <graphicData>
            <texPath>Things/Pawn/Appael/BeardedHelmet/BeardedHelmet</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <apparel Inherit="False">
            <bodyPartGroups>
              <li>FullHead</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Pawn/Appael/BeardedHelmet/BeardedHelmet</wornGraphicPath>
            <layers>
              <li>Overhead</li>
            </layers>
            <defaultOutfitTags>
              <li>Dwarf</li>
            </defaultOutfitTags>
            <useDeflectMetalEffect>true</useDeflectMetalEffect>
          </apparel>
        <recipeMaker>
          <displayPriority>100</displayPriority>
        </recipeMaker>
      </ThingDef>

