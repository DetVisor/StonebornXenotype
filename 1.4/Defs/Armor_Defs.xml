      <ThingDef ParentName="ApparelArmorPowerBase">
        <defName>DV_Apparel_IronbreakerArmor</defName>
        <label>ironbreaker armor</label>
        <description>A suit of powered armor. Layered plasteel-weave plates are very effective at stopping attacks, with few vulnerable joint sections. Neuro-memetic assistors allow a human to wear the armor and still move easily.\n\nArmor like this is often used by rapid-incursion space marines.</description>
        <apparel Inherit="False">
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
              </bodyPartGroups>
              <wornGraphicPath>Things/Pawn/Appael/IronbreakerArmor/IronbreakerArmor</wornGraphicPath>
              <layers>
                <li>Middle</li>
              </layers>
              <tags>
                <li>DwarfArmor</li>
              </tags>
            <defaultOutfitTags>
              <li>Dwarf</li>
            </defaultOutfitTags>
            <useDeflectMetalEffect>true</useDeflectMetalEffect>
          </apparel>
        <recipeMaker>
          <displayPriority>105</displayPriority>
        </recipeMaker>
      </ThingDef>

      <ThingDef ParentName="HatMakeableBase">
        <defName>DV_Apparel_Bandana</defName>
        <label>bandana</label>
        <description>A light, airy wrap. Soaks up sweat and helps with heat.</description>
        <graphicData>
          <texPath>Things/Pawn/Appael/Bandana/Bandana</texPath>
          <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <uiIconScale>1.25</uiIconScale>
        <costStuffCount>12</costStuffCount>
        <stuffCategories>
          <li>Fabric</li>
        </stuffCategories>
        <statBases>
          <MaxHitPoints>65</MaxHitPoints>
          <WorkToMake>1000</WorkToMake>
          <Mass>0.05</Mass>
          <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
          <StuffEffectMultiplierInsulation_Cold>0</StuffEffectMultiplierInsulation_Cold>
          <StuffEffectMultiplierInsulation_Heat>0.50</StuffEffectMultiplierInsulation_Heat>
          <EquipDelay>1.1</EquipDelay>
        </statBases>
        <generateCommonality>0.3</generateCommonality>
        <recipeMaker>
          <researchPrerequisite>ComplexClothing</researchPrerequisite>
          <displayPriority>105</displayPriority>
        </recipeMaker>
        <apparel>
          <countsAsClothingForNudity>false</countsAsClothingForNudity>
          <developmentalStageFilter>Child, Adult</developmentalStageFilter>
          <bodyPartGroups>
            <li>UpperHead</li>
          </bodyPartGroups>
          <wornGraphicPath>Things/Pawn/Appael/Bandana/Bandana</wornGraphicPath>
          <layers>
            <li>Overhead</li>
          </layers>
          <tags>
            <li>DwarfHat</li>
          </tags>
          <defaultOutfitTags>
            <li>Worker</li>
            <li>Soldier</li>
          </defaultOutfitTags>
        </apparel>
        <colorGenerator Class="ColorGenerator_Options">
          <options>
            <li>
              <weight>10</weight>
              <only>(0.33,0.33,0.33,1)</only>
            </li>
            <li>
              <weight>10</weight>
              <only>(0.65,0.65,0.65,1)</only>
            </li>
            <li>
              <weight>6</weight>
              <min>(0.3,0.3,0.3,1)</min>
              <max>(0.5,0.5,0.5,1)</max>
            </li>
            <li>
              <weight>10</weight>
              <only>(0.9,0.9,0.9,1)</only>
            </li>
          </options>
        </colorGenerator>
        <tradeTags>
          <li>BasicClothing</li>
        </tradeTags>
      </ThingDef>

      <ThingDef ParentName="ApparelBase">
        <defName>DV_Apparel_CrystalCrown</defName>
        <label>crystal crown</label>
        <description>A small crown-like piece of headwear made of metal.</description>
        <smeltable>true</smeltable>
        <recipeMaker>
          <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
          <workSkill>Crafting</workSkill>
          <effectWorking>Smith</effectWorking>
          <soundWorking>Recipe_Smith</soundWorking>
          <recipeUsers>
            <li>ElectricSmithy</li>
            <li>FueledSmithy</li>
          </recipeUsers>
          <defaultIngredientFilter>
            <categories>
              <li>Root</li>
            </categories>
            <disallowedThingDefs>
              <li>Uranium</li>
            </disallowedThingDefs>
          </defaultIngredientFilter>
          <researchPrerequisite>RoyalApparel</researchPrerequisite>
          <displayPriority>220</displayPriority>
        </recipeMaker>
        <graphicData>
          <texPath>Things/Pawn/Appael/CrystalCrown/CrystalCrown</texPath>
          <graphicClass>Graphic_Single</graphicClass>
          <drawSize>(0.8, 0.8)</drawSize>
        </graphicData>
        <uiIconScale>1.15</uiIconScale>
        <costStuffCount>50</costStuffCount>
        <stuffCategories>
          <li>Metallic</li>
          <!-- Stuff like jade here maybe? -->
        </stuffCategories>
        <statBases>
          <MaxHitPoints>110</MaxHitPoints>
          <WorkToMake>9500</WorkToMake>
          <Mass>0.9</Mass>
          <EquipDelay>0.9</EquipDelay>
        </statBases>
        <equippedStatOffsets>
          <SocialImpact>0.25</SocialImpact>
          <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.2</SlaveSuppressionOffset>
        </equippedStatOffsets>
        <apparel>
          <countsAsClothingForNudity>false</countsAsClothingForNudity>
          <bodyPartGroups>
            <li>UpperHead</li>
          </bodyPartGroups>
          <wornGraphicPath>Things/Pawn/Appael/CrystalCrown/CrystalCrown</wornGraphicPath>
          <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
          <layers>
            <li>Overhead</li>
          </layers>
          <tags>
            <li>DwarfRoyalTier1</li>
          </tags>
          <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
          <canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
          <canBeGeneratedToSatisfyToxicEnvironmentResistance>false</canBeGeneratedToSatisfyToxicEnvironmentResistance>
        </apparel>
        <colorGenerator Class="ColorGenerator_StandardApparel" />
        <tradeTags>
          <li>Clothing</li>
        </tradeTags>
      </ThingDef>

