    <ThingDef ParentName="BuildingBase">
      <defName>DV_CoreDrill</defName>
      <label>core drill</label>
      <description>A deep-crust drilling rig for extracting minerals from deep under the surface. Use a ground-penetrating scanner to detect the resources. This drill will yield stone chunks if no resources are present. Can be repositioned freely.</description>
      <graphicData>
        <graphicClass>Graphic_Single</graphicClass>
        <texPath>Things/Building/Production/CoreDrill</texPath>
        <drawSize>(6,6)</drawSize>
        <drawOffset>(0,0,1.2)</drawOffset>
        <drawRotated>false</drawRotated>
        <shadowData>
          <volume>(0.52, 0.53, 0.09)</volume>
          <offset>(0,0,-0.43)</offset>
        </shadowData>
      </graphicData>
      <size>(3,3)</size>
      <altitudeLayer>MoteOverhead</altitudeLayer>
      <passability>Impassable</passability>
      <pathCost>50</pathCost>
      <fillPercent>0.5</fillPercent>
      <hasInteractionCell>true</hasInteractionCell>
      <interactionCellOffset>(0,0,-2)</interactionCellOffset>
      <designationCategory>Production</designationCategory>
      <designationHotKey>Misc12</designationHotKey>
      <specialDisplayRadius>2.6</specialDisplayRadius> <!-- 21 closest cells, must be in sync with CompDeepDrill -->
      <rotatable>true</rotatable>
      <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
      <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
      <uiIconOffset>(0, 0.03)</uiIconOffset>
      <uiIconScale>0.85</uiIconScale>
      <minifiedDef IsNull="True" />
      <building>
        <buildingTags>
          <li>Production</li>
        </buildingTags>
        <destroySound>BuildingDestroyed_Metal_Small</destroySound>
      </building>
      <thingCategories>
        <li>BuildingsProduction</li>
      </thingCategories>
      <costList>
        <Steel>300</Steel>
        <ComponentIndustrial>2</ComponentIndustrial>
      </costList>
      <placeWorkers>
        <li>PlaceWorker_DeepDrill</li>
        <li>PlaceWorker_PreventInteractionSpotOverlap</li>
      </placeWorkers>
      <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
      <researchPrerequisites>
        <li>DeepDrilling</li>
      </researchPrerequisites>
      <statBases>
        <MaxHitPoints>300</MaxHitPoints>
        <WorkToBuild>10000</WorkToBuild>
        <Flammability>0.5</Flammability>
        <Beauty>-25</Beauty>
        <Mass>35</Mass>
      </statBases>
      <comps>
        <li Class="CompProperties_Forbiddable"/>
        <li Class="CompProperties_Flickable"/>
        <li Class="CompProperties_Power">
          <compClass>CompPowerTrader</compClass>
          <basePowerConsumption>350</basePowerConsumption>
        </li>
        <li Class="CompProperties_DeepDrill" />
        <li Class="CompProperties_CreatesInfestations" />
      </comps>
    </ThingDef>

<ThingDef ParentName="BuildingBase">
    <defName>DV_HallPillar</defName>
    <label>hall pillar</label>
    <description>A column capable of holding a roof. Does not block sight or movement and looks quite nice.</description>
    <designationCategory>Structure</designationCategory>
    <altitudeLayer>Building</altitudeLayer>
    <uiOrder>2040</uiOrder>
    <blockLight>false</blockLight>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>false</castEdgeShadows>
    <fillPercent>0.75</fillPercent>
    <pathCost>0</pathCost>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToBuild>1550</WorkToBuild>
      <Mass>30</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>5</Beauty>
      <StyleDominance MayRequire="Ludeon.RimWorld.Ideology">10</StyleDominance>
    </statBases>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>100</costStuffCount>
    <holdsRoof>true</holdsRoof>
    <canOverlapZones>false</canOverlapZones>
    <rotatable>false</rotatable>
    <fertility>0</fertility>
    <specialDisplayRadius>6.9</specialDisplayRadius> <!-- must be kept in sync with roof hold-up radius -->
    <building>
      <isInert>true</isInert>
      <ai_chillDestination>false</ai_chillDestination>
      <paintable>true</paintable>
    </building>
    <size>(1,1)</size>
    <graphicData>
      <drawSize>(3,3)</drawSize>
      <drawOffset>(0,0,1)</drawOffset>
      <texPath>Things/Building/Furniture/HallPillar</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shadowData>
        <volume>(1, 1, 1)</volume>
        <offset>(0,0,-0.23)</offset>
      </shadowData>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
    </graphicData>
  </ThingDef>

</Defs>